import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
        Scanner sc=new Scanner(System.in);
       
        int l =sc.nextInt();
        int a=sc.nextInt();
        int p=sc.nextInt();
        int flag=0; // these initialised in the loops don't work out side, why?
        int x;
         
        for (x=l;x>0;x--)
        {
            if (2*x<=a && 4*x<=p)
            {
                flag=1;
                //System.out.println(x+2*x+4*x);
                break;
            }
            else 
                 flag=0;//System.out.println("0");
            
        }
        
        if(flag==1){System.out.println(x+2*x+4*x);}
        else System.out.println("0");
        
        
    }
}
